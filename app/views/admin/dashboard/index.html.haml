/ .navbar-top-links
#page-wrapper{:style => "margin-left:250px;"}
  .row
    .col-lg-12
      %h3.page-header Admin Dashboard
  .row
    .col-lg-3.col-md-6
      .panel.panel-primary
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-plus.fa-5x
            .col-xs-9.text-right
              .huge
              %div Create Service
        %a{:href => "/admin/services/new"}
          .panel-footer
            %span.pull-left Create Service
            %span.pull-right
              %i.fa.fa-plus
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-green
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-tasks.fa-5x
            .col-xs-9.text-right
              .huge
                = get_stats('Service')
              %div{:style => "margin-top: 8%;"} View Services
        %a{:href => "/admin/services"}
          .panel-footer
            %span.pull-left View Details
            %span.pull-right
              %i.fa.fa-tasks
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-yellow
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-users.fa-5x
            .col-xs-9.text-right
              .huge
                = get_stats("User")
              %div{:style => "margin-top: 8%;"} Our Users
        %a{:href => "#"}
          .panel-footer
            %span.pull-left View Details
            %span.pull-right
              %i.fa.fa-users
            .clearfix
    .col-lg-3.col-md-6
      .panel.panel-red
        .panel-heading
          .row
            .col-xs-3
              %i.fa.fa-support.fa-5x
            .col-xs-9.text-right
              .huge
                = get_stats('City')
              %div{:style => "margin-top: 8%;"} Service in Cities
        %a{:href => "#"}
          .panel-footer
            %span.pull-left View Details
            %span.pull-right
              %i.fa.fa-support
            .clearfix