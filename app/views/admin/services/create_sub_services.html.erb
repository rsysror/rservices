<div class="main-container">
  <div class="header-container">
    <div class="row">
    <div class="add-new">
            <%= link_to t('.Back', :default => t("helpers.links.back")),
                    admin_services_path,
                    :class => 'btn btn-primary', style: "color:#fff" %>
        </div>
      <div class="top-title">
        <h2>
          <h1>Sub Service</h1>
        </h2>
      </div>
      </div>
      <hr>
      <%= form_for @sub_service, :url => admin_services_path, :html => { :class => "form-horizontal sub_service", :id => "sub_service_form" } do |f| %>

        <% if @sub_service.errors.any? %>
          <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@sub_service.errors.count, "error") %> prohibited this sub_service from being saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
              <% @sub_service.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
              <%= f.label :name, :class => 'control-label col-lg-2' %>
              <div class="col-lg-10">
                <%= f.text_field :name, :class => 'form-control' %>
                <label for="service_name" class="service-text error"><%#=f.error_span(:name) %></label>
              </div>
              <%#=f.error_span(:name) %>
            </div>
            <div class="form-group">
              <%= f.hidden_field :parent_id, :value => params[:id] %>
            </div>

            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <%= f.submit 'Create Sub Service', :class => 'btn btn-primary' %>
                <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
                          sub_services_path, :class => 'btn btn-default' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
  <script type="text/javascript">
    <%= render "common/validate.js" %>
  </script>
</div>

