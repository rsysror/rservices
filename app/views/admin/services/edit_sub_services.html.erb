<div class="container">
  <div class="row">
    <div class="add-new">
      <%= link_to t('.Back', :default => t("helpers.links.back")), sub_services_admin_service_path(:id => @service.parent_id),:class => 'btn btn-primary', style: "color:#fff" %>
    </div>
  </div>
  <hr>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Edit Sub Service</h3>
    </div>
    <div class="panel-body">
      <%= form_for [:admin, @service], :url => update_sub_services_admin_service_path, :method => "put", :html => { :class => "form-horizontal sub_service" } do |f| %>
        <% if @service.errors.any? %>
          <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@sub_service.errors.count, "error") %> prohibited this service from being saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
              <% @service.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">

            <div class="form-group">
              <%= f.label :name, :class => 'control-label col-lg-2' %>
              <div class="col-lg-10">
                <%= f.text_field :name, :class => 'form-control' %>
                <label for="service_name" class="error-title error"></label>
              </div>
              <%=f.error_span(:name) %>
            </div>

            <div class="form-group">
              <%= f.label :price, :class => 'control-label col-lg-2' %>
              <div class="col-lg-10">
                <%= f.number_field :price, :class => 'form-control', required: 'true', min: 0, style: "width: 100%;" %>
                <label for="service_price" class="error-title error"></label>
              </div>
            </div>

            <div class="form-group">
              <%= f.hidden_field :parent_id, :value => @service.parent_id %>
            </div>

            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <%= f.submit nil, :class => 'btn btn-primary' %>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

