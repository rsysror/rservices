<div class="container">
  <!-- <div class="header-container"> -->
    <div class="row">
      <div class="add-new">
      	<%= link_to t('.Back', :default => t("helpers.links.back")), admin_root_path, :class => 'btn btn-primary', style: "color:#fff" %>
      </div>
      <hr>
   </div> 

   <div class="panel panel-primary"> 
    <div class="panel-heading">
      <h3>Users List</h3>
    </div>
     <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>City</th>
            <th>Created at</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= get_full_name(user) %></td>
              <td><%=users_city(user) %></td>
              <td><%=l user.created_at %></td>
              <td>
                <%= link_to t('.show', :default => t("helpers.links.show")),
                            admin_user_path(user), :class => 'btn btn-default btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            admin_user_path(user),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger', style: "color:#fff" %>
                <%= link_to "Service requests", user_service_request_admin_user_path(user),  :class => 'btn btn-default btn-xs'  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>