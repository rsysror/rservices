<div class="container">
  <div class="row">
    <div class="add-new">
      <%=back_button_link(admin_partners_path) %>
    </div>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Partner Details</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-3">
          <!-- <div> -->
            <!-- <div> -->
          <div class="ht_30"><%= image_tag(@portfolio.avatar.url, class: 'img_style') %></div>
          <div class="info_detail_left ht_40">
            <table class="table table-striped table-hover margin_top_20">
              <tbody>
                <tr>
                  <td colspan="2"><h4 class="text-center"><%= @portfolio.company_name %></h4></td>
                </tr>
                <tr>
                  <td class="wd-60">Status</td>
                  <td><span class="label label-success"><%= @portfolio.portfolio_status %></span></td>
                </tr>
                <tr>
                  <td class="wd-50">Company Rating</td>
                  <td> <%=show_average_rating(@portfolio)%></td>
                </tr>
                <tr>
                  <td class="wd-50">Company Since</td>
                  <td><%= @portfolio.user.created_at.strftime('%v') %></td>
                </tr>
                <tr>
                  <td class="wd-50">Address</td>
                  <td><%= @portfolio.address %></td>
                </tr>
              </tbody>
            </table>
          </div>
            <!-- </div> -->
          <!-- </div> -->
        </div>
        <div class="col-sm-9">
          <div>
            <div class="about_bg_clr ht_15">
              <h3 class="text-center">About</h3>
              <div class="margin_10"><%= @portfolio.about %></div>
            </div>
            <div class="ht_50 scroll">
              <%= render partial: './partner/portfolios/photo_details', :locals => { :portfolio => @portfolio } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>