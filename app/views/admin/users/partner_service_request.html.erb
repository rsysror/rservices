<div class="container">
  <div class="row">
    <div class="add-new">
      <%=back_button_link(admin_partners_path) %>
    </div>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Service Request</h3>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <th>Service Name</th>
          <th>Address</th>
          <th>User</th>
          <th>Time Slot</th>
          <th>Service Request Number</th>
          <th>Status</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% @service_requests.each do |request|%>
            <tr>
              <td><%=request.service.try(:name).titleize %></td>
              <td><%=request.address.flat_number %>,<%=request.address.street_name %>,<%=request.address.pin_code %></td>
              <td><%=request.user.email  %></td>
              <td><%=request.try(:time_slot).try(:start_time_with_end_time) %></td>
              <td><%=request.service_request_number %></td>
              <td><%=request.status.try(:name) %></td>
              <td>
                <%=admin_status_action(request)%>       
              </td>
            </tr>
          <% end %>   
        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination">
    <%=will_paginate @service_requests %>
  </div>
</div>
