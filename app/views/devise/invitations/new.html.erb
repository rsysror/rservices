<div class="container">
  <div class="row">
    <div class="add-new">
      <%= back_button_link(partner_dashboard_index_path) %>
    </div>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading"><h3>Send Invitation</h3></div>
    <div class="panel-body">
      <%= form_for resource, :as => resource_name, :url => send_invitation_path(resource_name), :html => {:method => :post,id: "forgot-password"} do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="col-md-5 col-md-offset-1">
            <div class="form-group">
              <% resource.class.invite_key_fields.each do |field| -%>
                <p><%= f.label field %><br />
                <%= f.text_field field, class:"form-control" %></p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5 col-md-offset-1">
            <div class="form-group">      
              <%= f.submit "Send",class: "btn btn-primary" %>
            </div>
          </div>  
      <% end %>
    </div>  
  </div>
</div>  




