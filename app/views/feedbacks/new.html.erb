<script src="/assets/jquery.raty.js"></script>
<link href="/assets/jquery.raty.css" rel="stylesheet" type="text/css">


<div class="container">
   <%= link_to t('.Back', :default => t("helpers.links.back")),dashboard_path,:class => 'btn btn-primary', style: "color:#fff" %>
   <hr>
   <div class="panel panel-primary">
      <div class="panel-heading">
         <h3>Give Your Feedback</h3>
      </div>
      <div class="panel-body">
				<%= form_for @feedback do |f| %>
	        <div class="row">
				  	<div class="col-md-4 col-md-offset-1">
            	<div class="form-group">
              	<label>Rating</label>
            		<div id="default"></div>
            		<%=f.hidden_field :rating, value: '' %>
            		<%=f.hidden_field :portfolio_id, value: params[:portfolio_id] %>
                <%=f.hidden_field :service_request_id, value: params[:request_id] %>
            	</div>
          	</div>
          </div>
          
          <div class="row">	
				  	<div class="col-md-4 col-md-offset-1">
            	<div class="form-group">		
              	<label>Remarks</label>
              	<%= f.text_area :description, class:"form-control"  %>
            	</div>
          	</div>
					</div>			

          <div class="row">
            <div class="col-md-4 col-md-offset-1">
              <div class="form-group">
                <%=f.submit "Post",  class: "btn btn-primary", style: "width: 100%;" %>
              </div>
            </div>
          </div>
				<% end %>
      </div>
    </div>
</div>  