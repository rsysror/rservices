%script{:src => "/assets/jquery.raty.js"}
%link{:href => "/assets/jquery.raty.css", :rel => "stylesheet", :type => "text/css"}/
.container
  = back_button_link(dashboard_path)
  .panel.panel-primary
    .panel-heading
      %h3 Give Your Feedback
    .panel-body
      = form_for @feedback do |f|
        .row
          .col-md-4.col-md-offset-1
            .form-group
              %label Rating
              #default
              = f.hidden_field :rating, value: ''
              = f.hidden_field :portfolio_id, value: params[:portfolio_id]
              = f.hidden_field :service_request_id, value: params[:request_id]
        .row
          .col-md-4.col-md-offset-1
            .form-group
              %label Remarks
              = f.text_area :description, class:"form-control"
        .row
          .col-md-4.col-md-offset-1
            .form-group
              = f.submit "Post",  class: "btn btn-primary"
