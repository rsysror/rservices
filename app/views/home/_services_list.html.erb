<div class="row">
<% @services.each do |service|%>
	<div class="card" style="height: 450px; width: 23%; margin-bottom: 25px;">
		<a href="/dashboard">
			<div class="card__front">
			  <span class="card__text">
	      	<div class="img-grid">
						<%= image_tag("#{service.photo}", {:style => "width:100%; height: 265px;"}) %>
						<div class="car_description">
							 <h4><a href="/dashboard"><%=service.name%></a></h4>
							 <div class="price"><span class="fa fa-rupee"></span><span class="font25"> <%=service.price%></span></div>
							 <p>Estimated Charge</p>
							 <div class="date"><span class="fa fa-clock-o"></span> <%= service.created_at.strftime("%b %d, %Y") %></div>
						</div>
					</div>
			  </span>
			</div>
		</a>
	</div>
<% end %>
</div>