%head
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    #wrapper
      / Navigation
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .navbar-header
          %a.navbar-brand{:href => "/"}=# current_user.first_name.titleize
        %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %ul.nav.navbar-nav.navbar-left
          %li
            %a{:href => "/"}
              %i.fa.fa-home.fa-fw
              R-services
        %ul.nav.navbar-right.navbar-top-links{ :style => "margin:0px !important;"}
          %dropdown
            %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :type => "button", :style => "height:50px; width:160px;"}
              %i.fa.fa-user.fa-fw
              = current_user.full_name
              %span.caret{ :style => "float: right; margin: 6%;"}
            %ul.dropdown-menu
              %li
                - if current_user.partner?
                  %a{:href => "/partner/portfolio"} Dashboard
                - elsif current_user.admin?
                  %a{:href => "/admin"} Dashboard
                - else
                  %a{:href => "/dashboard"} Dashboard
              %li
                #{link_to "Sign out", destroy_user_session_path, :method => :delete}
    - if current_user.admin?
      = render :partial => "shared/admin_left"
    - else
      = render :partial => "shared/partner_left"
    = yield

