<div class="panel-heading">
  <h3>Add Service</h3>
</div>
<div class="panel-body">
  <%= form_for @portfolio_service, url: partner_company_services_path, html: { multipart: true, :class => 'form-horizontal' } do |form| %>

    <div class="form-group">
      <%= form.label :service, "Sub Service", class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= select_available_services(@sub_services, form) %>
      </div>
    </div>

    <div class="form-group" id="show_city"></div>

    <div class="form-group">
      <%= form.label :price, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.number_field :price, class: 'form-control form_input', required: 'true', min: 0 %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Create", :class=> 'btn btn-primary w3l_header_right', id: "company_service_create" %>
    </div>
  <% end %>
</div>
