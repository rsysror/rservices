<div class="panel-heading">
  <h3>Update Company Details</h3>
</div>
<div class="panel-body">
  <%= form_for @portfolio, url: partner_portfolio_path, html: { multipart: true, :class => 'form-horizontal' } do |form| %>

    <div class="form-group">
      <%= form.label :company_name, "Company Name", class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :company_name, class: 'form-control form_input', required: 'true', min: 0 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :company_ph_no, "Company Phone", class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :company_ph_no, class: 'form-control form_input', required: 'true', min: 0 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :experience, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.number_field :experience, class: 'form-control form_input', required: 'true', min: 0 %>
      </div>
    </div>


    <div class="form-group">
      <%= form.label :about, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_area :about, class: 'form-control text_area', required: 'true' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :address, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_area :address, class: 'form-control text_area', required: 'true'%>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :avatar, "Company Logo", class: 'control-label col-sm-2' %>
      <div class="col-sm-10"> 
        <%= form.file_field :avatar, class: "partner-avatar" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :documents, "Id Card", class: 'control-label col-sm-2' %>
      <div class="col-sm-10"> 
        <%= form.file_field :documents, multiple: true, class: "partner-avatar" %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Update", :class=> 'btn btn-primary w3l_header_right', id: 'update_portfolio' %>
    </div>
  <% end %>
</div>
