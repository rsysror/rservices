<hr>
<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Your PortFolio Details</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-3">
          <div>
            <div>
              <div class="info_detail_left ht_22"><%= image_tag(@portfolio.avatar.url, class: 'img_style') %></div>
              <div class="info_detail_left ht_48">
                <table class="table table-striped table-hover margin_top_20">
                  <tbody>
                    <tr>
                      <td colspan="2"><h3 class="text-center"><%= @portfolio.user.full_name %></h3></td>
                    </tr>
                    <tr>
                      <td class="wd-50">Gender</td>
                      <td><%= @portfolio.gender %></td>
                    </tr>
                    <tr>
                      <td class="wd-60">Status</td>
                      <td><span class="label label-success">Active</span></td>
                    </tr>
                    <tr>
                      <td class="wd-50">User Rating</td>
                      <td><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i><i class="fa fa-star vd_yellow fa-fw"></i></td>
                    </tr>
                    <tr>
                      <td class="wd-50">Member Since</td>
                      <td><%= @portfolio.user.created_at.strftime('%v') %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <div class="col-sm-9">
          <div>
            <div class="info_detail_right ht_22">
              <h3 class="text-center">About</h3>
              <div class="margin_10"><%= @portfolio.about %></div>
            </div>
            <div class="info_detail_right ht_48">
              <h3 class="text-center">Photos</h3>
              <%= @portfolio.about %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>