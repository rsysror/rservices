<div class="container">
  <div class="row">
    <div class="add-new">
      <%= link_to t('.Back', :default => t("helpers.links.back")),dashboard_path,:class => 'btn btn-primary' %>
    </div>
  </div>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Service Request List</h3>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <th>Service Request Name</th>
          <th>Address</th>
          <th>Vendor</th>
          <th>Time Slot</th>
          <th>Service Request Number</th>
          <th>Status</th>
          <th>Rating</th>
          <th>Actions</th>
        </thead>
        <tbody>
          <% @service_requests.each do |request|%>
            <%= render :partial => 'service_request_list', :locals => { :request => request } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination">
    <%=will_paginate @service_requests %>
  </div>
</div>

